extends base

block meta
  - var title = 'Категория каталога (шины)';

block filter
  .header__footer
    button.filter-toggler.d-flex.align-items-center.justify-content-center.p-2(type="button")
      +icon('filter','filter-toggler__icon h4 mr-2')
      span.filter-toggler__title
        span.filter-toggler__show Показать
        span.filter-toggler__hide Скрыть
        | фильтр

block wrapper
  .wrapper
    ul.pathway(itemscope itemtype="http://schema.org/BreadcrumbList")
      li(itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem")
        a.pathway__link(href="#" itemprop="item")
          span(itemprop="name") Главная
          meta(itemprop="position" content="1")
      li(itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem")
        a.pathway__link(href="#" itemprop="item")
          span(itemprop="name") Шины
          meta(itemprop="position" content="2")
      li(itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem")
        a.pathway__current(href="#" itemprop="item")
          span(itemprop="name") Шины R18
          meta(itemprop="position" content="3")
    section.content
      h1(itemprop="name") Шины в Ростове-на-Дону
    .category-counter.mb-4 14 840 товаров
    .row
      .col-xl-2.col-lg-3.mb-lg-4
        include base/filter-tires.pug

      .col-xl-10.col-lg-9.mb-4
        include base/brands.pug

    include category/popular.pug

    .mb-3
      .h2.font-weight-bold.mb-4 Рекомендуем так же:
      include category/carousel.pug

    include base/links.pug

    .content.content_expanded.mb-5
      include base/content.pug
      .content__footer
        button.readmore.readmore_btn(type="button")
          +icon('readmore','h2 color-theme-brand')
