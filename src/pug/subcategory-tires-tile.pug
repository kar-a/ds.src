extends base

block meta
  - var title = 'Подкатегория каталога (серия бренда шин)';

block filter
  .header__footer
    button.filter-toggler.d-flex.align-items-center.justify-content-center.p-2(type="button")
      +icon('filter','filter-toggler__icon h4 mr-2')
      span.filter-toggler__title
        span.filter-toggler__show Показать
        span.filter-toggler__hide Скрыть
        | фильтр

block wrapper
    .wrapper
      nav.pathway
        a.pathway__link(href="#") Главная
        a.pathway__link(href="#") Шины
        a.pathway__current(href="#") Шины R18
      section.content
        h1 Купить шины CORDIANT в Ростове-на-Дону
      .category-counter.mb-4 1 840 товаров
      .row
        .col-xl-2.col-lg-3.mb-lg-4
          +brand('Cordiant', 'brand_category d-flex flex-column align-items-center justify-lg-content-center justify-content-between bg-white py-2 py-lg-3 px-3 mb-3', 'd-inline-block')
          include base/filter-tires.pug

        .col-xl-10.col-lg-9.mb-4
          form.form.row.justify-content-end.mb-4(action="#")
            .col-xl-3.col-md-4.col-sm-7
              .form__select
                select.form__select-options
                  option По умолчанию
                  option По возрастанию цены
                  option По убыванию цены
                  option По популярности
            .col-xl-1.col-md-2.col-sm-5.d-none.d-sm-flex.align-items-center.justify-content-end
              button.form__view.mr-3(type="button")
                +icon('list')
              button.form__view.active(type="button")
                +icon('tile')
          .category.mb-3
            - var positions = ['Зимние шины Yokohama Ice Guard IG55 215/55 R17 98T','Зимние шины Yokohama Ice Guard IG55 215/55 R17 98T XL','Зимние шины Yokohama Ice Guard IG55 215/55','Зимние шины Yokohama Ice','Зимние шины Yokohama Ice Guard IG55','Зимние шины Yokohama Ice Guard IG55 215/55','Зимние шины Yokohama Ice','Шины Yokohama Ice Guard IG55 215/55 R17 98T','CORDIANT Sport 3','Зимние шины Yokohama Ice Guard IG55 215/55 R17 98T','Зимние шины Yokohama Ice Guard IG55 215/55 R17 98T XL','Зимние шины Yokohama Ice Guard IG55 215/55','Зимние шины Yokohama Ice','Зимние шины Yokohama Ice Guard IG55','Зимние шины Yokohama Ice Guard IG55 215/55','Зимние шины Yokohama Ice','Шины Yokohama Ice Guard IG55 215/55 R17 98T','CORDIANT Sport 3']
            each positions__item in positions
              .card.card_tile.d-sm-flex.flex-column.justify-content-between.h-100.pt-3.px-3.pb-4
                .card__header.justify-content-center.justify-content-sm-between.mb-sm-3
                  a.card__picture.mb-0(href="#")
                    img.img-fluid(src="../img/content/cards/card-1.jpg" alt="" title="")
                .card__body.card__body_lg.d-flex.flex-column.justify-content-between.flex-grow-1
                  .card__intro.mb-3
                    .card__meta.card__meta_row.flex-wrap.flex-sm-nowrap.mb-3
                      .card__features.mb-1.mb-sm-0
                        .icon-marker
                          +icon('summer')
                      .card__params.flex-grow-1.text-sm-right.color-theme-brand.mb-1.mb-sm-0 R16 / R17 / R18 / R19
                    a.card__title.d-block.mb-3(href="#")!= positions__item
                  .card__footer
                    .card__meta.card__meta_row
                      .card__price
                        span.card__price-value от 7 337.12&nbsp;
                        | ₽/шт.

    .box-shadow.pt-4.pb-3.mb-5
      .wrapper
        .h2.font-weight-bold.mb-4 Другие бренды:
        - var logoWheels = ['content/logo/logo-1.jpg','content/logo/logo-2.jpg','content/logo/logo-3.jpg','content/logo/logo-4.jpg','content/logo/logo-5.jpg','content/logo/logo-2.jpg','content/logo/logo-3.jpg','content/logo/logo-1.jpg','content/logo/logo-2.jpg','content/logo/logo-3.jpg','content/logo/logo-4.jpg','content/logo/logo-5.jpg','content/logo/logo-2.jpg','content/logo/logo-3.jpg']
        each logoWheels__item in logoWheels
          a.d-inline-block.mr-2.mr-sm-3.mb-4(href="#")
            +img(logoWheels__item)

    .wrapper
      include category/popular.pug

      .mb-3
        .h2.font-weight-bold.mb-4 Рекомендуем так же:
        include category/carousel.pug

      include base/links.pug

      .content.content_expanded.mb-5
        include base/content.pug
        .content__footer
          button.readmore.readmore_btn(type="button")
            +icon('readmore','h2 color-theme-brand')
