                          +icon('dropdown','menu__icon h6')
                        .menu__wrapper
            .header__wrapper
                .header__col.header__col_logo.col-xl-4.col-lg-5.mb-3
                    a.logo.color-theme-brand.mr-4(href="#")
                      +svg('logo')
                    nav.header__nav.d-flex.align-items-center.justify-content-center
                        a.header__btn.text-uppercase.mr-3(href="#")
