                        a.header__btn.text-uppercase(href="#")
                          +icon('services','header__btn-icon mr-lg-2')
                          span.header__btn-title Услуги
                .header__col.header__col_search.col-xl-3.mb-3
                    form.search(action="#" method="post")
                        input.search__field(type="text" placeholder="Я ищу..." value="")
                        button.search__btn(type="submit")
                          +icon('search')
                .header__col.header__col_nav.col-xl-5.col-lg-7.flex-grow-1.flex-lg-grow-0.mb-3
                    nav.header__nav.d-flex.align-items-center.justify-content-lg-start.justify-content-between.flex-grow-1.mr-lg-5
                        button.header__nav-item.header__nav-item_col.d-flex.flex-column.text-center.text-nowrap.d-lg-none(type="button")
                            span.header__nav-icon.d-flex.flex-column.align-items-center.justify-content-center
                              +icon('search')
                            span.header__btn-title Поиск
                        a.header__nav-item.header__nav-item_col.d-flex.flex-column.text-center.text-nowrap.col-lg-3(href="#")
                            span.header__nav-icon.d-flex.flex-column.align-items-center.justify-content-center
                              +icon('compare')
                            span.header__btn-title Сравнить
                        a.header__nav-item.header__nav-item_col.d-flex.flex-column.text-center.text-nowrap.col-lg-3(href="#")
                            span.header__nav-icon.d-flex.flex-column.align-items-center.justify-content-center
